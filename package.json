{
  "name": "bakery",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/cds-hana": "^2.0.0",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bakeryapp": "cds watch --open bakeryapp/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy bakery --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "auth": "basic"
    }
  },
  "sapux": [
    "app/bakeryapp"
  ],
  "devDependencies": {
    "@sap/ux-specification": "^1.120.14",
    "rimraf": "^5.0.5"
  }
}
